{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@connect-four/shared": ["shared/index.ts"]
    }
  },
  "include": ["shared/**/*.ts", "client/src/**/*", "server/**/*.ts"],
  "exclude": ["node_modules", "**/dist"]
}
